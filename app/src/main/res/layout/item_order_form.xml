<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/corners_white_dialog_bg">

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp80">

            <RelativeLayout
                android:id="@+id/layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.example.administrator.sportsfitness.ui.view.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:layout_margin="@dimen/dp15"
                    android:src="@drawable/placeholder" />

                <ImageView
                    android:id="@+id/img_angle"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:layout_margin="@dimen/dp15"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/order_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_toRightOf="@+id/layout_img"
                android:lineSpacingExtra="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14" />

            <TextView
                android:id="@+id/order_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_toRightOf="@+id/layout_img"
                android:lineSpacingExtra="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp13" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:textColor="@color/blue_bar"
                android:textSize="@dimen/dp13" />

            <TextView
                android:id="@+id/placeholder"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/order_status"
                android:layout_marginTop="@dimen/dp10"
                android:text="placeholder"
                android:textColor="@color/transparent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/placeholder"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/layout_content"
            android:background="@color/gray_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line"
            android:layout_marginRight="@dimen/dp15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/controller_life"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp25"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/corners_hollow_text_gray"
                android:gravity="center"
                android:text="@string/cancle_order"
                android:textColor="@color/gray_light_text"
                android:textSize="@dimen/dp13" />

            <TextView
                android:id="@+id/controller_right"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp25"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/corners_hollow_text_blue"
                android:gravity="center"
                android:textColor="@color/blue_bar"
                android:textSize="@dimen/dp13" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/gray_"
        android:visibility="gone" />

</LinearLayout>