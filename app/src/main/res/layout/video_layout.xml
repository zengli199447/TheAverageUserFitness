<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/black">

    <com.example.administrator.sportsFitness.widget.media.CustomVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#16101010" />

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp5"
            android:src="@drawable/play_icon_white" />

        <ImageView
            android:id="@+id/buffer_logo"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp5"
            android:src="@drawable/progress_white_animlist"
            android:visibility="gone" />

        <TextView
            android:id="@+id/error_prompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/media_play_error"
            android:textColor="@color/white"
            android:textSize="@dimen/dp12"
            android:visibility="gone" />

    </RelativeLayout>

    <include layout="@layout/volume_hint_layout" />

    <include layout="@layout/light_hint_layout" />

    <RelativeLayout
        android:id="@+id/rly_controller"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">
        <!--android:background="#45101010"-->

        <ImageView
            android:id="@+id/img_btn_black"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:padding="@dimen/dp12"
            android:src="@drawable/btn_left_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="视频名称"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:text="分享"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp14"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lly_controller"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible">
        <!--android:background="#45101010"-->

        <SeekBar
            android:id="@+id/seekbar_progress"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:indeterminate="false"
            android:maxHeight="3dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/seekbar_thumb" />
        <!--android:layout_marginLeft="-20dp"-->
        <!--android:layout_marginRight="-20dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/btn_play_style" />

            <TextView
                android:id="@+id/tv_currentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="00:00:00"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_totalProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_volume"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/seekbar_volume"
                    android:layout_width="120dp"
                    android:layout_height="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="-20dp"
                    android:layout_toRightOf="@id/iv_volume"
                    android:thumb="@null"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/btn_screen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="6dp"
                    android:padding="@dimen/dp12"
                    android:src="@drawable/ic_screen"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>