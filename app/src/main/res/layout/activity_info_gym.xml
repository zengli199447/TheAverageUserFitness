<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_img_tag" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:id="@+id/title_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:id="@+id/standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="20元/次"
                    android:textColor="@color/red_text"
                    android:textSize="@dimen/dp14" />

                <com.example.administrator.sportsFitness.ui.view.ShinyView
                    android:id="@+id/shiny_view"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp15"
                    android:layout_below="@+id/title_content"
                    android:layout_marginTop="@dimen/dp10"
                    ratingbar:starCount="5"
                    ratingbar:starDistance="@dimen/dp5"
                    ratingbar:starEmpty="@drawable/shiny_off_icon"
                    ratingbar:starFill="@drawable/shiny_icon"
                    ratingbar:starSize="@dimen/dp10" />

                <TextView
                    android:id="@+id/people_count_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_content"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_toRightOf="@+id/shiny_view"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:text="1.3万人消费"
                    android:textColor="@color/gray_light_text"
                    android:textSize="@dimen/dp12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15">

                <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                    android:id="@+id/location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/location_blue_icon" />

                <TextView
                    android:id="@+id/coordinates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_toRightOf="@+id/location_icon"
                    android:lineSpacingExtra="@dimen/dp5"
                    android:text="地理位置"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/dp12" />

                <ImageView
                    android:id="@+id/navigation"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/navigation_icon" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dp30"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_toLeftOf="@+id/navigation"
                    android:background="@color/gray_light" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_light" />

            <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="@dimen/dp10"
                android:text="11月06日    16:00-20:00"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/gray_" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10">

                <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                    android:id="@+id/course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp10"
                    android:text="@string/course_our_shop"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/dp14" />

                <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                    android:id="@+id/course_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableRight="@drawable/right_icon"
                    android:text="@string/more"
                    android:textColor="@color/gray_light_text"
                    android:textSize="@dimen/dp12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_light" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/course_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/gray_" />

            <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:drawablePadding="@dimen/dp10"
                android:text="@string/instructions"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:minHeight="@dimen/dp15"
                android:text="须知内容，说明内容"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/dp13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/gray_" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10">

                <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                    android:id="@+id/user_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp10"
                    android:text="@string/user_evaluation"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/dp14" />

                <com.example.administrator.sportsFitness.ui.view.DrawableCenterTextView
                    android:id="@+id/evaluation_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableRight="@drawable/right_icon"
                    android:text="@string/more"
                    android:textColor="@color/gray_light_text"
                    android:textSize="@dimen/dp12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_light" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/evaluation_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp15" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/reservations_now"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-30dp"
        android:layout_marginRight="-30dp"
        android:background="@drawable/corners_immersed_in_blue"
        android:gravity="center"
        android:text="@string/reservations_now"
        android:textColor="@color/white"
        android:textSize="@dimen/dp13" />


</RelativeLayout>